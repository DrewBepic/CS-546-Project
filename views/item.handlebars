
<div class="header">
    <h1>Item Page</h1>
</div>

{{!Other Stuff <br>}}
<h3> {{itemInfo.name}}</h3>
<p>Owner: {{ownerName}}</p>
<p>Description: {{itemInfo.description}}</p>
 <p>History: {{itemInfo.history}}</p>
  <p>Requests: {{itemInfo.requests}}</p>

  {{#if owner}}
    <p id="edit-error" class="error-left" {{#if i}}{{else}}hidden{{/if}}> {{edit_error}}</p>
    <form action="/item/edit/{{itemInfo._id}}" id="item_edit_form" method="POST">
  <label for="name"> Edit Name:</label><br>
  <input type="text" id="name" name="name" value="{{itemInfo.name}}">
   <label for="description"> Edit Description:</label><br>
  <input type="text" id="description" name="description" value="{{itemInfo.description}}">
  <input type="submit" value="Submit" >
</form> 
<form action="/item/{{itemInfo._id}}/remove" method="POST">
                    <button type="submit" class="removeItem">Delete Item</button>
                </form>
{{/if}}          

<form action="/item/{{itemInfo._id}}" id="item_comment_form" method="POST">
  <label for="comment">Add comment:</label><br>
  <input type="text" id="comment" name="comment" placeholder="...">
  <input type="submit" value="Comment">
</form>

  <p>Comments: 
    <div>
    <ul>
      {{#if itemInfo.comments}}
       {{#each itemInfo.comments}}
       <li>{{this.userName}}: {{this.comment}}</li>
       {{/each}}
       {{else}}
        <p>No comments.</p>
        {{/if}}
        </ul>
    </div></p> 
     <script src="/public/js/item_validate.js"></script>
