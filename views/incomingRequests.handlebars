<h1 id = 'incomingPendingReqTitle'>Incoming Pending Requests</h1>

{{#if incomingPendingRequests}}
  {{#each incomingPendingRequests}}
    <table>
      <tr>
        <th>Item Name</th>
        <td>{{this.itemName}}</td>
      </tr>
      <tr>
        <th>Status</th>
        <td>{{this.Status}}</td>
      </tr>
      <tr>
        <th>Lender</th>
        <td>{{this.LenderName}}</td> 
      </tr>
      <tr>
        <th>Borrower</th>
        <td>{{this.BorrowerName}}</td>
      </tr>
      <tr>
        <th>Requested On</th>
        <td>{{this.Date}}</td>
      </tr>
      <tr>
        <th>Borrower Description</th>
        <td>{{this.BorrowerDescription}}</td>
      </tr>
      <tr>
        <th>Accept or Reject</th>
        <td>
          <form action="/request/{{this._id}}/accept" method="POST">
            <button type="submit">Accept</button>
          </form>
          <form action="/request/{{this._id}}/reject" method="POST">
            <button type="submit">Reject</button>
          </form>
        </td>
      </tr>
    </table>
    <br>
  {{/each}}
  {{else}}
          <p class='noItems'>You currently do not have any incoming pending requests.</p>
  {{/if}}

