<h1 class="center"> Unfinished Requests</h1>

<ul class="simple-list-2">
    {{#each unfinished}}
    <li>
        <p>Item: {{this.itemName}}</p>
        <p>Borrower: {{this.borrower}}</p>
        <p>Date Requested: {{this.Date}}</p>
    </li>
    <form action="/ratingRequests" method="POST">
        <div>
            <label for="rating">Rating from 1-10:</label>
            <input type="hidden" name="requestId" value="{{this._id}}">
            <input type="hidden" name="BorrowerID" value="{{this.BorrowerID}}">
            <input type="number" id="rating" name="rating" min="1" max="10" required>
            <input type="submit" value="Rate">
        </div>
    </form>
    {{/each}}
</ul>